<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.jmw.conference.entities.Building" table="BUILDINGS" lazy="false">
  <id column="BUILDING_ID" name="id">
   <generator class="native"/>
  </id>
  <property name="name"/>
  <property name="title"/>
  <property name="comment"/>
  <property name="active"/>
  
  <set name="floors" sort="unsorted" lazy="false" table="FLOORS">
   <key column="BUILDING_ID"/>
   <element column="FLOOR_ID" type="integer"/>
  </set>
 </class>
</hibernate-mapping>
